{
  "name": "tldw-assistant",
  "displayName": "tldw Assistant - Browser Extension for tldw_server",
  "version": "0.1.0",
  "description": "A browser extension frontend for tldw_server - your unified AI assistant with RAG, media processing, and more.",
  "author": "tldw-team",
  "scripts": {
    "dev": "cross-env TARGET=chrome wxt",
    "dev:firefox": "cross-env TARGET=firefox wxt -b firefox",
    "dev:edge": "cross-env TARGET=chrome wxt -b edge",
    "build": "bun run locales:sync && bun run build:chrome && bun run build:firefox && bun run build:edge",
    "build:chrome": "cross-env TARGET=chrome wxt build",
    "build:firefox": "cross-env TARGET=firefox wxt build -b firefox && node scripts/strip-dangerous-eval.mjs",
    "build:edge": "cross-env TARGET=chrome wxt build -b edge",
    "zip": "bun run locales:sync && cross-env TARGET=chrome wxt zip",
    "zip:firefox": "bun run locales:sync && cross-env TARGET=firefox wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "verify:openapi": "node scripts/verify-openapi-client-paths.mjs",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "postinstall": "wxt prepare",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:perf": "playwright test tests/e2e/performance-*.spec.ts",
    "perf:bundle": "node scripts/report-bundle-size.mjs",
    "build:analyze": "cross-env ANALYZE=true TARGET=chrome wxt build",
    "check:i18n:dupes": "node scripts/check-duplicate-keys.mjs",
    "check:i18n:coverage": "node scripts/check-locale-coverage.mjs",
    "check:i18n:glossary": "node scripts/check-i18n-glossary.js",
    "locales:sync": "node scripts/sync-public-locales.js"
  },
  "dependencies": {
    "@ant-design/cssinjs": "^1.24.0",
    "@heroicons/react": "^2.2.0",
    "@mozilla/readability": "^0.5.0",
    "@plasmohq/storage": "^1.15.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-virtual": "^3.13.18",
    "@vitejs/plugin-react": "^4.7.0",
    "antd": "^5.29.3",
    "axios": "^1.13.2",
    "caniuse-lite": "^1.0.30001763",
    "cheerio": "^1.1.2",
    "cytoscape": "^3.33.1",
    "cytoscape-dagre": "^2.5.0",
    "d3-dsv": "^2.0.0",
    "dayjs": "^1.11.19",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^1.1.7",
    "dompurify": "^3.3.1",
    "html-to-text": "^9.0.5",
    "html2canvas": "^1.4.1",
    "i18next": "^23.16.8",
    "i18next-browser-languagedetector": "^7.2.2",
    "i18next-icu": "^2.4.1",
    "lucide-react": "^0.561.0",
    "marked": "^15.0.12",
    "mermaid": "^10.9.5",
    "pa-tesseract.js": "^5.1.1",
    "prism-react-renderer": "^2.4.1",
    "property-information": "^6.5.0",
    "pubsub-js": "^1.9.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^14.1.3",
    "react-icons": "^5.5.0",
    "react-markdown": "8.0.0",
    "react-router-dom": "6.10.0",
    "react-syntax-highlighter": "^15.6.6",
    "react-toastify": "^10.0.6",
    "rehype-katex": "6.0.3",
    "rehype-mathjax": "4.0.3",
    "remark-gfm": "3.0.1",
    "remark-math": "5.1.1",
    "turndown": "^7.2.2",
    "unist-util-visit": "^5.0.0",
    "yt-transcript": "^0.0.2",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "4.0.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.280",
    "@types/cytoscape": "^3.31.0",
    "@types/d3-dsv": "^3.0.7",
    "@types/firefox-webext-browser": "^120.0.5",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "20.19.0",
    "@types/pubsub-js": "^1.8.6",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/react-speech-recognition": "^3.9.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/turndown": "^5.0.6",
    "acorn": "^8.15.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^7.0.3",
    "estree-walker": "^3.0.3",
    "magic-string": "^0.30.21",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.19",
    "typescript": "5.3.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vitepress": "^1.6.4",
    "wxt": "^0.19.29"
  }
}
